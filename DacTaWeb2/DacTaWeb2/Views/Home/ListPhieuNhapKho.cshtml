@model IEnumerable<DacTaWeb2.Models.ViewModels.ListPNKViewModel>

@{
    ViewData["Title"] = "ListPhieuNhapKho";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh sách phiếu nhập kho</h1>

<style>
    * {
        font-family: Arial, Helvetica, sans-serif !important;
    }

    td, th {
        border: solid 1px purple !important;
        padding: 5px !important;
        text-align: center;
    }

        td:first-child {
            text-align: left !important;
        }

        td img {
            width: 100px !important;
            border-radius: 0 !important;
        }

    a .btn-primary {
        color: white !important;
    }

    a {
        text-decoration: none !important;
    }
</style>
<a class="btn-primary" style=" color: white !important; padding: 10px; display: inline-block; margin: 20px 0; border-radius: 6px" asp-action="ThemPhieuNhapKho2">Thêm mới phiếu nhập kho</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên nhân viên
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Thời gian
            </th>
            <th>
                Trạng thái
            </th>
            <th>
                Tổng tiền
            </th>
            <th>
                Tên nhà cung cấp
            </th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenNV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Thoigian)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trangthai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tongtien)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TenNCC)
            </td>
            <td>
                    <a class="btn-primary" style="width: 55px; padding:10px 0; display: inline-block; margin: 5px; border-radius: 6px" >Sửa</a>
                    <a class="btn-primary" style="width: 55px; padding:10px 0; display: inline-block; margin: 5px; border-radius: 6px" >Chi tiết</a>
                    <a class="btn-primary" style="width: 55px; padding:10px 0; display: inline-block; margin: 5px; border-radius: 6px" >Xoá</a>
            </td>
        </tr>
}
    </tbody>
</table>
