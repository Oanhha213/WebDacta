@model DacTaWeb2.Models.Sanpham

@{
    ViewData["Title"] = "SuaSanPham";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Sửa sản phẩm</h1>

<h4>Sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="SuaSanPham" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdSp" />
            <div class="form-group">
                <label asp-for="TenSp" class="control-label"></label>
                <input asp-for="TenSp" class="form-control" />
                <span asp-validation-for="TenSp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anh" class="control-label"></label>
                <input asp-for="formFile" class="form-control" />
                <span asp-validation-for="Anh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soluong" class="control-label"></label>
                <input asp-for="Soluong" class="form-control" />
                <span asp-validation-for="Soluong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaNhap" class="control-label"></label>
                <input asp-for="GiaNhap" class="form-control" />
                <span asp-validation-for="GiaNhap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaBan" class="control-label"></label>
                <input asp-for="GiaBan" class="form-control" />
                <span asp-validation-for="GiaBan" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdMau" class="control-label"></label>
                <select asp-for="IdMau" class="form-control" asp-items="ViewBag.IdMau"></select>
                <span asp-validation-for="IdMau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdKc" class="control-label"></label>
                <select asp-for="IdKc" class="form-control" asp-items="ViewBag.IdKc"></select>
                <span asp-validation-for="IdKc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCv" class="control-label"></label>
                <select asp-for="IdCv" class="form-control" asp-items="ViewBag.IdCv"></select>
                <span asp-validation-for="IdCv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTh" class="control-label"></label>
                <select asp-for="IdTh" class="form-control" asp-items="ViewBag.IdTh"></select>
                <span asp-validation-for="IdTh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdLsp" class="control-label"></label>
                <select asp-for="IdLsp" class="form-control" asp-items="ViewBag.IdLsp"></select>
                <span asp-validation-for="IdLsp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Trở về danh sách sản phẩm</a>
</div>

